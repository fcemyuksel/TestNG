<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">

<suite name="cross browser calistirma">

    <test name="chrome ile calisacak testler">
        <parameter name="browser" value="chrome"></parameter>

        <classes>
            <class name="tests.day21_CrossBrowserCalisacakTestler.C01_pozitifLoginTesti"></class>
            <class name="tests.day21_CrossBrowserCalisacakTestler.C02_negatifLoginTesti"></class>
        </classes>

    </test>

    <test name="edge ile calisacak testler">
        <parameter name="browser" value="edge"></parameter>
        <classes>
            <class name="tests.day21_CrossBrowserCalisacakTestler.C01_pozitifLoginTesti"></class>
            <class name="tests.day21_CrossBrowserCalisacakTestler.C02_negatifLoginTesti"></class>
        </classes>

    </test>
    <test name="firefox ile calisacak testler">
        <parameter name="browser" value="firefox"></parameter>
        <classes>
            <class name="tests.day21_CrossBrowserCalisacakTestler.C01_pozitifLoginTesti"></class>
            <class name="tests.day21_CrossBrowserCalisacakTestler.C02_negatifLoginTesti"></class>
        </classes>

    </test>



</suite>


        <!--
            Crossbrowser calismayi saglayabilmek icin
            emrin .xml dosyasindan gitmesi gerekir

            farkli browser'lar ile calismasini istedigimiz
            test class'larini
            .xml dosyasinda farkli testler olarak tanimlamaliyiz

        -->